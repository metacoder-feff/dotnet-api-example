FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build-env
WORKDIR /App

# Copy everything
COPY . ./

# Restore as distinct layers
# using packages.lock.json
RUN dotnet restore --locked-mode     src/MegaBack.Api/MegaBack.Api.csproj

# Build and publish a release
RUN dotnet publish -c Release -o out src/MegaBack.Api/MegaBack.Api.csproj


# Build runtime image
FROM mcr.microsoft.com/dotnet/aspnet:8.0
EXPOSE 8080
WORKDIR /App
COPY --from=build-env /App/out .
RUN ls -hal .
ENTRYPOINT ["dotnet", "MegaBack.Api.dll"]
